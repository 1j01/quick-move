    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Python App",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/quick_move/__main__.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/pytest",
            // "args": ["-k", "some_test_function"],
            "console": "integratedTerminal",
            "justMyCode": false,
            // If using pytest-cov in the future:
            // "env": {"PYTEST_ADDOPTS": "--no-cov"}
        }
    ]
}
